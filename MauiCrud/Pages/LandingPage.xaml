<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCRUD.LandingPage"
             Title="Welcome">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
        <Label Text="Welcome to the Product Management App" 
               FontSize="24" 
               HorizontalOptions="Center" />
        <Button Text="Go to Products" 
                FontSize="18"
                Clicked="OnGoToProductsClicked" 
                HorizontalOptions="Center" 
                Margin="20"/>
    </VerticalStackLayout>
</ContentPage>
